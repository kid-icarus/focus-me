{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "esModuleInterop": false,
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}
